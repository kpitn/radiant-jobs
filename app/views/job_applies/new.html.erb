  <% f.inputs do   %>
    <%= f.input :firstname %>
    <%= f.input :lastname %>
    <%= f.input :email %>
    <%= f.input :motivation %>
  <% end %>
  <% f.buttons do %>
      <%= f.commit_button %>
  <% end %>

<% end %>